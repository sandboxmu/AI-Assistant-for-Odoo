# XML: ai_assistant_config_views.xml

<odoo>
  <record id="view_ai_assistant_config_form" model="ir.ui.view">
    <field name="name">ai.assistant.config.form</field>
    <field name="model">ai.assistant.config</field>
    <field name="arch" type="xml">
      <form string="Assistant Configuration">
        <sheet>
          <group>
            <field name="name"/>
            <field name="chatbot_id"/>
            <field name="is_active"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="view_ai_assistant_config_tree" model="ir.ui.view">
    <field name="name">ai.assistant.config.tree</field>
    <field name="model">ai.assistant.config</field>
    <field name="arch" type="xml">
      <tree string="Assistant Configurations">
        <field name="name"/>
        <field name="is_active"/>
      </tree>
    </field>
  </record>

  <record id="action_ai_assistant_config" model="ir.actions.act_window">
    <field name="name">Assistant Configurations</field>
    <field name="res_model">ai.assistant.config</field>
    <field name="view_mode">tree,form</field>
  </record>

  <menuitem id="menu_ai_assistant_root" name="Chat Whisperer AI" sequence="10"/>
  <menuitem id="menu_ai_assistant_config" name="Configurations" parent="menu_ai_assistant_root" action="action_ai_assistant_config"/>
</odoo>


