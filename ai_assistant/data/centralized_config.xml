<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Your Centralized Configuration -->
        <record id="centralized_ai_config" model="ai.assistant.config">
            <field name="name">AI Assistant Service</field>
            <field name="provider">openai</field>
            <field name="model_name">gpt-3.5-turbo</field>
            <field name="api_key">REPLACE_WITH_YOUR_API_KEY</field>
            <field name="max_tokens">1000</field>
            <field name="temperature">0.7</field>
            <field name="cost_per_1k_tokens">0.002</field>
            <field name="markup_percentage">400.0</field>
            <field name="credit_rate">10.0</field>
            <field name="is_active">True</field>
        </record>

        <!-- System Parameters for Your Service -->
        <record id="param_service_provider" model="ir.config_parameter">
            <field name="key">ai_assistant.service_provider</field>
            <field name="value">Your Company Name</field>
        </record>

        <record id="param_support_email" model="ir.config_parameter">
            <field name="key">ai_assistant.support_email</field>
            <field name="value">support@yourcompany.com</field>
        </record>
    </data>
</odoo>
